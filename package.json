    "vfile": "^6.0.3",
    "vfile-matter": "^5.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.11.1",
    "@swc/jest": "^0.2.37",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "esbuild": "^0.25.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.2"
